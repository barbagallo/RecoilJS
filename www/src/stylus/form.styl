form
  fieldset
    position relative
    border none
    margin 40px 0 0
    padding 0
    clearfix()
    &:first-of-type
      margin-top 0
    legend
      font-size 22px
      display block
      padding 0
      margin 0
      clear both
      border-bottom 1px solid #eee
      width 100%
      margin 0
      & + p
        padding 20px 0 20px
        margin 0
    .field
      padding 10px 20px 10px 0
      float left
      width 300px
      label
        display block
        font-family 'Century Gothic'
        text-transform uppercase
        font-size 12px
        input[type=checkbox], input[type=radio]
          width auto
          display inline-block
          position relative
          top 8px
          margin 0 10px 0 5px
      input, .input, select
        display block
        width 100%
        height 30px
        line-height 30px
        border-radius 3px
        border 1px solid #ccc
        box-shadow inset 2px 2px 4px rgba( black, 0.05 )
        padding 1px 11px
        color #888
        &.input
          height auto
          min-height 30px
          margin 0
          list-style none
          max-height 90px
          overflow auto
          li
            float left
            padding 0 5px 0 0
        &:disabled, &.disabled
          border-color #eee
          background #f9f9f9
          box-shadow none
        &:focus
          border-color $blue
          border-width 2px
          outline none
          padding 0 10px
